    <script>
      var presses = 0;
      var correctKey = "13"
      var start = Date.now()
      var list = ""

      document.getElementById("button").focus();


      document.addEventListener('keyup', logKey);

      function logKey(e) {
        var keycode = (e.keyCode ? e.keyCode : e.which);
    if (keycode == "32") {
  
      presses = presses + 1
      RT = Date.now() - start;
      time = Date.now();


      document.getElementById("CountLine").innerHTML = "Number of errors counted: " + presses;
      
      list = list + "," + presses + "," + RT;
      
      document.getElementById("datatosend").value = start + list 

    }
  }
     
